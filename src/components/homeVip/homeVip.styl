*
  box-sizing border-box
.left
  float left
.right
  float right
.see-more
  font-size 14px
  color #808080
  padding-top 5px
  cursor pointer
.shadow
  box-shadow 0 10px 18px 0 rgba(0, 0, 0, 0.12)
.remove
  transition all linear 0.3s
.remove:hover
  margin-top -5px
.homeVip-wrapper
  width 100%
  min-width 1200px
  margin auto
  height auto
  .homeVip-content
    width 1200px
    height 100%
    margin auto
  .homeVip-title
    width 100%
    font-size 20px
    color #c0a15d
    font-weight bold
    padding 60px 0
    span
      font-weight bold
      font-size 20px
      vertical-align -1px
      margin-right 10px
  .homeVip-grade
    width 100%
    min-width 1200px
    margin auto
    height 896px
    background #fff
    .grade-course
      position relative
      height 665px
      background url(./grade-bg.png) center no-repeat
      .grad-circle
        position absolute
        left 195px
        bottom 170px
        z-index 100
      .grad-shadow,.grade-award
        margin-left 82px
        width 1012px
      .grad-shadow
        position relative
        height 555px
        .top-lv
          position absolute
          top 0
          left 0
          right 0
          bottom: 0
          z-index 200
          background rgba(0, 0, 0, 0.3)
        .grad-LV-shadow
          position absolute
          top 0
          left 0
          width 125px
          height 492px
          transition all 0.3s
          &.shadow-LV1
            left 0
            background url(./gradeShadow.png) 0px 13px no-repeat
          &.shadow-LV2
            left 125px
            background url(./gradeShadow.png) -125px 13px no-repeat
          &.shadow-LV3
            left 248px
            background url(./gradeShadow.png) -248px 13px no-repeat
          &.shadow-LV4
            left 373px
            background url(./gradeShadow.png) -373px 13px no-repeat
          &.shadow-LV5
            left 497px
            background url(./gradeShadow.png) -497px 13px no-repeat
          &.shadow-LV6
            left 621px
            background url(./gradeShadow.png) -621px 13px no-repeat
          &.shadow-LV7
            left 745px
            background url(./gradeShadow.png) -745px 13px no-repeat
          &.shadow-LV8
            left 870px
            background url(./gradeShadow.png) -870px 13px no-repeat
      .grade-award
        height 110px
        padding 22px 0
        display flex
        .grade-award-item
          flex 1
          text-align center
          span
            font-size 30px
            color #c8c8c8
            &.awardLight
              color #c0a15d
          p
            font-size 14px
            color #333333
            padding-top 17px
  .homeVip-growUp
    width 100%
    min-width 1200px
    margin auto
    height 576px
    background url(./homeVip-growUp-bg.png) center no-repeat
    .homeVip-title
      padding 75px 0 38px 0
    .growUp-ul
      width 100%
      height 347px
      li
        width 285px
        height 347px
        margin-right 20px
        border-radius 5px
        overflow hidden
        &:last-child
          margin-right 0
        .growUp-li-item1
          width 285px
          height 224px
          background #ffffff
          padding 47px
          img
            margin auto
            display block
        .growUp-li-item2
          width 285px
          height 123px
          background #f2f2f2
          padding-top 37px
          .taskName
            text-align center
            font-size 18px
            color #333333
          .taskAward
            text-align center
            padding-top 10px
            font-size 14px
            color #808080
            span
              font-size 22px
              color #c0a15d

  .homeVip-beanMall
    width 100%
    min-width 1200px
    margin auto
    height 838px
    background #fff
    .homeVip-title
      padding 75px 0 52px 0
    .beanAD
      width 330px
      height 615px
      background url(../../../static/img/beanAD.png) no-repeat;
    .beanShow
      width 855px
      height 615px
      .beanMall-ul
        width 855px
        height 615px
        li
          width 270px
          height 297px
          margin 0 20px 20px 0
          &:nth-child(3),&:nth-child(6)
            margin-right 0
          .beanMall-li-content
            width 270px
            height 297px
            border-radius 5px
            overflow hidden
            .beanMall-li-item1
              width 270px
              height 210px
              padding: 0 30px
              img
                width: 100%
                height: 100%
            .beanMall-li-item2
              width 270px
              height 87px
              text-align center
              padding-top 22px
              .goodsName
                font-size 18px
                color #333333
              .goodsPrice
                font-size 14px
                color #999999
                padding-top 10px
                span
                  font-size 20px
                  color #c0a15d
  .homeVip-help
    width 100%
    min-width 1200px
    margin auto
    height 298px
    .homeVip-title
      padding 60px 0 45px 0
    .memberHelp,.beanHelp
      width 50%
      height 90px
      .help-title
        font-size 16px
        color #333333
        font-weight bold
      ul
        width 100%
        height auto
        overflow hidden
        li
          padding-top 20px
          &:nth-child(even)
            float right
            width 45%
          &:nth-child(odd)
            float left
            width 55%
          a
            font-size 14px
            color #808080
            &:hover
              color #c0a15d
    .memberHelp
      border-right 1px solid #d9d9d9
      padding 0 180px 0 30px
    .beanHelp
      padding 0 30px 0 180px

