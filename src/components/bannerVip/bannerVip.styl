*
  margin 0
  padding 0
  box-sizing border-box
  font-family MicrosoftYaHei

img
  border none

.left
  float left

.right
  float right

.bannerVip-wrapper
  width 100%
  min-width 1200px
  margin auto
  height 380px
  background url(./bannerVip-wrapper.png) no-repeat;
  .mask-wrap
    width 1200px
    height 0
    margin auto
    .mask-content
      position relative
      margin-top 19px
      width 280px
      height 342px
      border-radius 10px
      overflow hidden
      .mask-layer
        width 280px
        height 342px
        background rgba(255,255,255,.9)
      .mask-login
        position absolute
        top 0
        left 0
        width 280px
        height 342px
        padding 10px 10px 10px 16px
        .login-title
          .userName
            font-size 14px
            color #6d6d6d
            padding-top 10px
          .signIn
            font-size 12px
            color #be9f59
            span
              margin-right 5px

        .login-avatar
          margin 45px 0 25px 0
          width 280px
          height 86px


