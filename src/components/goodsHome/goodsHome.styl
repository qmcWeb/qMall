*
  margin 0
  padding 0
  box-sizing border-box
  font-family MicrosoftYaHei
.goods-wrapper
  width 100%
  height auto
  background #eee
  .content-wrapper
    margin 0 auto
    width 1200px
    height auto
    padding-bottom 40px
    .goods-item
      width 100%
      height 430px
      overflow hidden
      .title-wrapper
        position relative
        padding 40px 0 12px 0
        width 100%
        height 96px
        display flex
        .title-icon
          position relative
          width 32px
          height 44px
          span
            position absolute
            left 0
            top 4px
            display block
            width 32px
            font-size 20px
            color #fff
            text-align center
        .product
          margin-left 12px
          margin-top 18px
          font-size 20px
          color #264C65
          span
            margin-left 12px
            font-size 14px
            color #264C65
        .goods-more
          position absolute
          top 66px
          right 0
          font-size 14px
          color #264C65
          &:hover
            text-decoration underline
      &:first-child
        li
          &:nth-child(1)
            .introduce-img
              background: #C3E6FA
          &:nth-child(2)
            .introduce-img
              background: #FFDADA
          &:nth-child(3)
            .introduce-img
              background: #BDEEF7
          &:nth-child(4)
            .introduce-img
              background: #FFF0A1
      .goods
        width 100%
        display flex
