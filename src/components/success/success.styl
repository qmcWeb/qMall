*
  margin 0
  padding 0
  box-sizing border-box
  font-family MicrosoftYaHei

img
  border none

.left
  float left

.right
  float right
.success-wrapper
  width 1200px
  height auto
  overflow hidden
  background #fff
  margin 30px auto
  padding 80px 70px
  .success-left,.success-right
    width 50%
    height 514px
  .success-left
    border-right 1px solid #E4E4E4
    .success-hint
      padding-top 102px
      .entity-wrap, .virtual-wrap
        height 275px;
        position: relative
        .hint1
          font-size 26px
          color #264C65
          padding-bottom 15px
          img
            margin-right 12px
            margin-bottom: -29px;
        .hint2,.hint3
          font-size 14px
          color #92979B
        .hint3
          position: absolute
          left 0
          bottom 30px
        .hint2
          padding-bottom 157px
          line-height: 53px;
          span
            color #FB6C45
    .success-btn
      width 460px
      height 50px
      margin 0 0 30px 0
      a
        display block
        width 220px
        text-align center
        height 50px
        line-height 50px
        font-size 16px
        color #FB6C45
        border 1px solid #FB6C45
        border-radius 25px
  .success-right
    padding-left 70px
    .see-more
      width 100%
      height 35px
      span
        line-height 35px
      .look
        font-size 20px
        color #264C65
      .batch
        font-size 14px
        color #92979B
        cursor pointer
    .lookAround
      width 100%
      height auto
      margin-top 10px
      .look-item
        width 50%
        height 224px
        margin-bottom 30px
        .item-wrapper
          width 220px
          height 224px
          border-radius 5px;
          margin auto
          text-align center
          &:hover
            box-shadow 0 10px 18px 0 rgba(0, 0, 0, 0.12)
          .look-pic
            width 220px
            height 154px
            border 1px solid blue
          .look-des
            font-size 14px
            color #264C65
            margin-top 11px
            margin-bottom 4px
          .look-price
            font-size 14px
            color #000029
            span
              font-size 22px
              color #DA5140

