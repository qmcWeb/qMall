.good-wrap
  position relative
  width 288px
  height 334px
  background #fff
  transition: all .3s
  border-radius: 5px;
  &:hover
    box-shadow: 0 10px 18px 0 rgba(0, 0, 0, 0.12);
  .introduce-img
    display block
    width 100%
    height 232px
    padding: 0 28px;
    box-sizing: border-box;
    background: #fafafa
    &:hover .soldOut
      display block
    .soldOut
      opacity: 0.9;
      background: #264C65;
      border-radius: 5px 5px 0 0;
      position: absolute
      width: 100%;
      height: 232px;
      left 0
      top: 0
      text-align center
      font-size: 26px;
      color: #FFFFFF;
      line-height 232px
      -webkit-user-select none
      display none
    img
      width: 100%
      height: 100%
      border-radius: 5px 5px 0 0;
  .introduce-sellout
    position absolute
    top 0
    left 0
    z-index 2
    width 285px
    height 231px
    background #264C65
    opacity 0.9
    color #fff
    text-align center
    line-height 231px
    font-size 26px
  .good-introduce
    height 103px
    padding 0 14px 0 10px
    border-radius: 0 0 5px 5px;
    .goods-name
      padding 18px 0 13px 0
      a
        color #264C65
        font-size 16px
  .goods-price
    width 100%
    justify-content space-between
    display flex
  .cang-beans
    font-size 34px
    color #DA5140
    height 38px
    span
      font-size 14px
      color #000029
  .market-price
    font-size 14px
    color #92979B
    margin-top 17px
